# Production Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Primary email provider (smtp, gmail_api, mock)
EMAIL_PRIMARY_PROVIDER=smtp

# SMTP Settings (for EMAIL_PRIMARY_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
SMTP_TIMEOUT=60

# Gmail API Settings (for EMAIL_PRIMARY_PROVIDER=gmail_api)
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_TOKEN_PATH=token.json

# Sender Information
SENDER_NAME=Your Name
SENDER_EMAIL=your_email@gmail.com

# Rate Limiting
MAX_EMAILS_PER_DAY=20
MAX_EMAILS_PER_HOUR=5
MAX_EMAILS_PER_MINUTE=1

# Email Retry Settings
EMAIL_MAX_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAYS=300,900,3600

# Template Settings
EMAIL_TEMPLATES_DIR=templates
EMAIL_DEFAULT_TEMPLATE=initial_outreach

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_PATH=data/cold_outreach.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24
DATABASE_BACKUP_RETENTION_DAYS=30
DATABASE_CONNECTION_TIMEOUT=30

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================

SCRAPING_HEADLESS=true
SCRAPING_BROWSER_TIMEOUT=60000
SCRAPING_PAGE_TIMEOUT=30000
SCRAPING_ELEMENT_TIMEOUT=15000

# Anti-Detection
SCRAPING_USE_ANTI_DETECTION=true
SCRAPING_ROTATE_USER_AGENTS=true
SCRAPING_RANDOM_DELAYS=true
SCRAPING_MIN_DELAY=1.0
SCRAPING_MAX_DELAY=3.0

# Retry Settings
SCRAPING_MAX_RETRY_ATTEMPTS=3
SCRAPING_RETRY_DELAY=5.0

# Rate Limiting
SCRAPING_MAX_REQUESTS_PER_MINUTE=10
SCRAPING_MAX_CONCURRENT_SESSIONS=2

# Fallback Settings
SCRAPING_USE_FALLBACK_DATA=true
SCRAPING_FALLBACK_SAMPLE_SIZE=5

# Performance
SCRAPING_MAX_RESULTS_PER_SESSION=100
SCRAPING_MAX_SCROLL_ATTEMPTS=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=INFO
LOG_DIR=logs
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_RETENTION_DAYS=30

# Structured Logging
LOG_USE_JSON_FORMAT=true
LOG_INCLUDE_REQUEST_ID=true

# Component Logging
LOG_API_REQUESTS=true
LOG_DATABASE_QUERIES=false
LOG_EMAIL_CONTENT=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Settings
SECURITY_ENABLE_CORS=true
SECURITY_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# API Security
SECURITY_API_RATE_LIMIT=100

# Data Protection
SECURITY_ENCRYPT_SENSITIVE_DATA=false
SECURITY_AUDIT_ALL_ACTIONS=true

# Session Management
SECURITY_SESSION_TIMEOUT_MINUTES=60
SECURITY_MAX_CONCURRENT_SESSIONS=5

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development
DEBUG=false

# Performance
SYSTEM_MAX_CONCURRENT_TASKS=10
SYSTEM_TASK_TIMEOUT_SECONDS=300

# Health Checks
SYSTEM_HEALTH_CHECK_INTERVAL=60
SYSTEM_ENABLE_METRICS=true

# Maintenance
SYSTEM_AUTO_CLEANUP_ENABLED=true
SYSTEM_CLEANUP_INTERVAL_HOURS=24
